<% content_for :head do %>
  <%= stylesheet_link_tag 'devise' %>
<% end %>

<div class="devise-main-div">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "devise-form" }) do |f| %>
    <%= image_tag("red_dices.jpg", size: "72x72", alt: "Dices", class: 'mb-4') %>
      <h1 class="h3 mb-3 font-weight-normal">Forgot your password?</h1>
      <div class="form-group">
        <%= f.label :email, class: "sr-only" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>
      </div>
      <%= f.submit "Send me instructions", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>